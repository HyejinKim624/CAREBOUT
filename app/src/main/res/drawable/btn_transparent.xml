            <!-- 버튼 색깔 -->
            <solid android:color="@color/main_color"/>
            <!-- 네 귀퉁이 모양 -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <!-- 버튼 색깔 -->
            <solid android:color="#F9F9F9"/>
            <!-- 네 귀퉁이 모양 -->
            <corners android:radius="20dp" />
        </shape>
    </item>

