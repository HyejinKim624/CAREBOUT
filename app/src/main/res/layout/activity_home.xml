<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context=".view.home.HomeActivity">

    <ScrollView
        android:id="@+id/homeScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        tools:layout_editor_absoluteX="12dp"
        app:layout_constraintTop_toTopOf="@+id/container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="70dp"
            android:paddingBottom="140dp">

            <TextView
                android:id="@+id/helloName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="70dp"
                android:text="반가워, 쿵이!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:cardCornerRadius="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/helloName">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/birthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/profile">

                <TextView
                    android:id="@+id/woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♀"
                    android:textColor="#F00"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♂"
                    android:textColor="#00F"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0년 11개월"
                    android:textSize="14dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="코리안 숏헤어 5.1kg"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingBottom="35dp"
                app:layout_constraintTop_toBottomOf="@id/birthLayout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/memoLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/weight"
                app:strokeColor="#ddd"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/memo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:padding="20dp" />
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/weightGraphTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:paddingHorizontal="5dp"
                android:text="체중 그래프"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/memoLayout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/wieghtGraphCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                app:layout_constraintTop_toBottomOf="@id/weightGraphTitle"
                app:strokeColor="#ddd"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:divider="#ccc"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="32dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ddd" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="32dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ddd" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="32dp" />

                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/weightGraph"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="519dp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/checkGraphTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="5dp"
                android:text="검사 일지"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/wieghtGraphCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/checkGraphCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                app:layout_constraintTop_toBottomOf="@id/checkGraphTitle"
                app:strokeColor="#ddd"
                app:strokeWidth="1dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/checkGraph"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingHorizontal="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/vGraphTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="5dp"
                android:text="예방접종 일지"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/checkGraphCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vGraphCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                app:layout_constraintTop_toBottomOf="@id/vGraphTitle"
                app:strokeColor="#ddd"
                app:strokeWidth="1dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vGraph"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/v2GraphTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="5dp"
                android:text="심장사상충 일지"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/vGraphCardView" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                app:layout_constraintTop_toBottomOf="@id/v2GraphTitle"
                app:strokeColor="#ddd"
                app:strokeWidth="1dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/v2Graph"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:paddingBottom="50dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <include layout="@layout/bottom_tap"
        android:id="@+id/bottomTapBarOuter"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@id/container"/>

</androidx.constraintlayout.widget.ConstraintLayout>